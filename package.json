{
  "name": "counting-house",
  "workspaces": [
    "server",
    "client"
  ],
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "setup": "npm install && npm run setup:server && npm run setup:client",
    "setup:server": "cd server && npm install",
    "setup:client": "cd client && npm install",
    "start:client": "npm run start --workspace=client",
    "start:server": "npm run dev --workspace=server",
    "lint:client": "eslint \"./client/src/**/*.{js,ts}\"",
    "lint:server": "eslint \"./server/**/*.{js,ts}\"",
    "lint": "eslint \"./client/src/**/*.{js,ts}\" && eslint \"./server/**/*.{js,ts}\"",
    "format:client": "prettier --write \"./client/src/**/*.{js,ts}\"",
    "format:server": "prettier --write \"./server/**/*.{js,ts}\"",
    "formated": "npm run format:client && npm run format:server && eslint:client && eslint:server",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0-alpha.2",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "swagger-autogen": "^2.23.4"
  },
  "nodemonConfig": {
    "ignore": [
      "swagger_autogen.json"
    ]
  }
}
